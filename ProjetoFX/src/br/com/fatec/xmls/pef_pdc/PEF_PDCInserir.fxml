<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="recicla.telas.pef_pdc.AltertarPEFPDCInterface.java"
      spacing="20" alignment="TOP_CENTER" stylesheets="/recicla/css/style.css">
    <children>
        <Label text="Inserir Coleta" styleClass="title-label" />
        <GridPane hgap="15" vgap="10" alignment="CENTER">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <children>
                <Label text="Pessoa Física:" GridPane.row="0" GridPane.column="0"/>
                <TextField fx:id="tfIdPef" promptText="ID Pessoa Física" GridPane.row="0" GridPane.column="1"/>
                <Label text="Coletor:" GridPane.row="0" GridPane.column="2"/>
                <TextField fx:id="tfIdCol" promptText="ID Coletor" GridPane.row="0" GridPane.column="3"/>
                <Label text="Material:" GridPane.row="1" GridPane.column="0"/>
                <TextField fx:id="tfIdMat" promptText="ID Material" GridPane.row="1" GridPane.column="1"/>
                <Label text="Ponto de Coleta:" GridPane.row="1" GridPane.column="2"/>
                <TextField fx:id="tfIdPdc" promptText="ID Ponto" GridPane.row="1" GridPane.column="3"/>
                <Label text="Código:" GridPane.row="2" GridPane.column="0"/>
                <TextField fx:id="tfCod" promptText="Código" GridPane.row="2" GridPane.column="1"/>
                <Label text="Quantidade:" GridPane.row="2" GridPane.column="2"/>
                <TextField fx:id="tfQuant" promptText="Quantidade" GridPane.row="2" GridPane.column="3"/>
                <Label text="Data:" GridPane.row="3" GridPane.column="0"/>
                <TextField fx:id="tfData" promptText="YYYY-MM-DD" GridPane.row="3" GridPane.column="1"/>
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnSalvar" text="Salvar" />
            <Button fx:id="btnCancelar" text="Cancelar" />
        </HBox>
    </children>
</VBox>
